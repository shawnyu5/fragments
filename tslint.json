{
   "extends": "tslint:recommended",
   "rules": {
      "max-line-length": {
         "options": [
            120
         ]
      },
      "new-parens": true,
      "no-arg": true,
      "no-bitwise": true,
      "array-type": [
         true,
         "generic"
      ],
      "no-conditional-assignment": true,
      "no-consecutive-blank-lines": false,
      "jest": true,
      "no-console": {
         "severity": "warning",
         "options": [
            "debug",
            "info",
            "log",
            "time",
            "timeEnd",
            "trace"
         ]
      }
   },
   "jsRules": {
      "max-line-length": {
         "options": [
            120
         ]
      }
   }
}
